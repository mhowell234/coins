= form_for(@attribute_type) do |f|

  - if @attribute_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@attribute_type.errors.count, "error")
        prohibited this attribute_type from being saved:
      %ul
        - @attribute_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Type"
    %br/
    = f.text_field :value

  .actions
    = f.submit