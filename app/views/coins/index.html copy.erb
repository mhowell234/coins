<h1><%= @coin_value.name %> Coins</h1>

<% if !@coin_value.coins.empty? %>
<table>
  <tr>
    <th>Name</th>
    <th>Start year</th>
    <th>End year</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coins.each do |coin| %>
  <tr>
    <td><%= coin.name %></td>
    <td><%= coin.start_year %></td>
    <td><%= coin.end_year %></td>
    <td><%= coin.description %></td>
    <td><%= coin.coin_value_id %></td>
    <td><%= link_to 'Show', [@coin_value, coin] %></td>
    <td><%= link_to 'Edit', edit_coin_value_coin_path(@coin_value, coin) %></td>
    <td><%= link_to 'Destroy', [@coin_value, coin], :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<% else %>
  <p><%= @coin_value.name %> doesn't have any coins yet.</p>
<% end %>

<p>
 <%= link_to 'New Coin', new_coin_value_coin_path(@coin_value) %> |
 <%= link_to 'Back', @coin_value %>
</p>