= form_for ([@coin, @thumbnail]) do |f|
  - if @thumbnail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thumbnail.errors.count, "error")} prohibited this thumbnail from being saved:"
      %ul
        - @thumbnail.errors.full_messages.each do |msg|
          %li= msg


  = f.hidden_field :coin_id, :value => @coin.id

  .field
    = f.label :file_name
    = f.text_field :file_name

  .field
    = f.label :caption
    = f.text_field :caption

  .actions
    = f.submit 'Save'