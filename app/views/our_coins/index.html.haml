.actions
  %span.add= link_to "New Our Coin", new_our_coin_path


%h1 Our Coins

%table.table
  %thead
    %tr
      %th Mint coin
      %th Origin
      %th Origin date
      %th
  %tbody
    - @our_coins.each do |our_coin|
      %tr
        %td= link_to "#{our_coin.title}", our_coin
        %td= our_coin.origin.name
        %td= our_coin.origin_date
        %td 
          %span.edit= link_to 'Edit', edit_our_coin_path(our_coin)
          |
          %span.delete= link_to 'Delete', our_coin, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
