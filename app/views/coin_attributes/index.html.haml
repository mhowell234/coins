%h1 #{@coin.name} Attributes

%table
  %tr
    %th Coin
    %th Coin attribute type id
    %th Coin attribute value
    %th
    %th
    %th

  - @coin_attributes.each do |coin_attribute|
    %tr
      %td= coin_attribute.coin_id
      %td= coin_attribute.coin_attribute_type_id
      %td= coin_attribute.coin_attribute_value
      %td= link_to 'Show', [@coin_value, @coin, coin_attribute]
      %td= link_to 'Edit', edit_coin_value_coin_coin_attribute_path(@coin_value, @coin, coin_attribute)
      %td= link_to 'Destroy', [@coin_value, @coin, coin_attribute], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br/

= link_to 'New Coin attribute', new_coin_value_coin_coin_attribute_path(@coin)