= form_for(@precious_metal) do |f|

  - if @precious_metal.errors.any?
    #error_explanation
      %h2
        = pluralize(@precious_metal.errors.count, "error")
        prohibited this precious_metal from being saved:
      %ul
        - @precious_metal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :symbol
    %br/
    = f.text_field :symbol

  .field
    = f.label :unit
    %br/
    = f.text_field :unit

  .field
    = f.label :conversion_factor
    %br/
    = f.text_field :conversion_factor

  .field
    = f.label :price_per_unit
    %br/
    = f.text_field :price_per_unit

  .field
    = f.label :price_per_gram
    %br/
    = f.text_field :price_per_gram

  .actions
    = f.submit