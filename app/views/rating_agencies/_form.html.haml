= form_for(@rating_agency) do |f|

  - if @rating_agency.errors.any?
    #error_explanation
      %h2
        = pluralize(@rating_agency.errors.count, "error")
        prohibited this rating_agency from being saved:
      %ul
        - @rating_agency.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :full_name
    %br/
    = f.text_field :full_name

  .actions
    = f.submit