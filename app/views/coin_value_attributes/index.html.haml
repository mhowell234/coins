.actions
  %span.add= link_to "New Attribute", new_coin_value_coin_value_attribute_path
  |
  %span.back= link_to 'Back', @coin_value

%h1 #{@coin_value.name} Attributes

- if @coin_value.coin_value_attributes.size > 0
  %table.table
    %tr
      %th Type
      %th Value
      %th
    - @coin_value_attributes.each do |coin_value_attribute|
      %tr
        %td= coin_value_attribute.attribute_type.value
        %td= coin_value_attribute.value
        %td
          %span.edit= link_to 'Edit', edit_coin_value_coin_value_attribute_path(@coin_value, coin_value_attribute)
          |
          %span.delete= link_to 'Delete', [@coin_value, coin_value_attribute], :method => :delete, :data => { :confirm => 'Are you sure?' }
- else
  %p
    %b= "No Attributes"
%br/