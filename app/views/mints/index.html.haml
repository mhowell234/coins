.actions
  %span.add= link_to '<< Create New >>', new_mint_path

%h1 Mints

%dl
  - @mints.each do |mint|
    %dt
      = link_to "#{mint.name} (#{mint.symbol})", mint

      .actions
        %span.edit= link_to 'Edit', edit_mint_path(mint)
        |
        %span.delete= link_to 'Delete', [mint], :method => :delete, :data => { :confirm => 'Are you sure?' }


    %dd.expandable
      %p= "Symbol Always Present?: #{mint.always_present}"
      - if mint.comments
        %p= mint.comments
      
%br/

