= form_for([@coin_value, @coin, @year_coin]) do |f|

  - if @year_coin.errors.any?
    #error_explanation
      %h2
        = pluralize(@year_coin.errors.count, "error")
        prohibited this year_coin from being saved:
      %ul
        - @year_coin.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :coin_id, :value => @coin.id

  .field
    = f.label :year
    %br/
    = select_year(Date.today, :start_year => Time.now.year, :end_year => 1776, :field_name => 'year')

  .field
    = f.label :additional_info
    %br/
    = f.text_area :additional_info

  .field
    = f.label "Is Gold?"
    %br/
    = f.radio_button :is_gold, "1" 
    = f.label :is_gold, "Yes ", :value => "1"
    = f.radio_button :is_gold, "0"
    = f.label :is_gold, "No", :value => "0"

  .field
    = f.label "Is Silver?"
    %br/
    = f.radio_button :is_silver, "1" 
    = f.label :is_silver, "Yes ", :value => "1"
    = f.radio_button :is_silver, "0"
    = f.label :is_silver, "No", :value => "0"

  .actions
    = f.submit