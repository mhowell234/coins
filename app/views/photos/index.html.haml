.actions
  %span.add= link_to "New #{@coin.name} Photo", new_coin_photo_path(@coin)
  |
  %span.back= link_to 'Back', [@coin.coin_value, @coin]

%h1 #{@coin.name} #{@coin.coin_value.name} Photos

- if @coin.photos.size > 0
  %table.table
    %tr
      %th Photo
      %th Caption
      %th
    - @photos.each do |photo|
      %tr
        %td= image_tag photo.img_path, {:width => '100', :title => photo.caption, :alt => photo.caption}
        %td.middle= photo.caption
        %td.middle
          %span.edit= link_to 'Edit', edit_coin_photo_path(@coin, photo)
          |
          %span.delete= link_to 'Delete', [@coin, photo], :method => :delete, :data => { :confirm => 'Are you sure?' }
- else
  %p
    %b= "No Photos"
%br/
