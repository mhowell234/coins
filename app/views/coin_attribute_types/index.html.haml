.actions
  %span.add= link_to "New Attribute Type", new_coin_attribute_type_path

%h1 Coin Attribute Types

- if @coin_attribute_types.size > 0
  %table.table
    %tr
      %th Value
      %th

    - @coin_attribute_types.each do |coin_attribute_type|
      %tr
        %td= link_to coin_attribute_type.value, coin_attribute_type
        %td
          %span.edit= link_to 'Edit', edit_coin_attribute_type_path(coin_attribute_type)
          |
          %span.delete= link_to 'Delete', coin_attribute_type, :method => :delete, :data => { :confirm => 'Are you sure?' }
- else
  %p
    %b= "No Attribute Types"
%br/

