= form_for(@origin) do |f|

  - if @origin.errors.any?
    #error_explanation
      %h2
        = pluralize(@origin.errors.count, "error")
        prohibited this origin from being saved:
      %ul
        - @origin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .actions
    = f.submit