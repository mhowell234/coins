.actions
  %span.add= link_to "New #{@mint_coin.title} #{@mint_coin.coin.name} Composition", new_mint_coin_composition_path(@mint_coin)
  |
  %span.back= link_to 'Back', [@mint_coin.coin, @mint_coin]

%h1= link_to "#{@mint_coin.title} - #{@mint_coin.coin.name}", [@mint_coin]


- if @mint_coin.compositions.size > 0
  %table.table
    %thead
      %tr
        %th Metal
        %th %
        %th
    %tbody
      - @mint_coin.compositions.each do |comp|
        %tr
          %td= comp.precious_metal.name
          %td= comp.percentage
          %td
            %span.edit= link_to 'Edit', edit_mint_coin_composition_path(@mint_coin, comp)
            |
            %span.delete= link_to 'Delete', [@mint_coin, comp], :method => :delete, :data => { :confirm => 'Are you sure?' }
- else
  %p
    %b= "No Compositions Defined"